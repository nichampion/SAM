<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SAM">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TexteMenu">
        </activity>
            <activity
                android:name=".TexteMorse">
            </activity>
            <activity
                android:name=".TexteBraille">
            </activity>
        <activity
            android:name=".MorseMenu">
        </activity>
            <activity
                android:name=".MorseTexte">
            </activity>
            <activity
                android:name=".MorseBraille">
            </activity>
        <activity
            android:name=".BrailleMenu">
        </activity>
            <activity
                android:name=".BrailleTexte">
            </activity>
            <activity
                android:name=".BrailleMorse">
            </activity>

    </application>

</manifest>